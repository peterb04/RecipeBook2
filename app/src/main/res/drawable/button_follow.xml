<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="3dip"/>
            <stroke android:width="1dip" android:color="#637c78"/>
            <gradient android:angle="-90" android:startColor="#0a5e23" android:endColor="#035b0d"/>
        </shape>
    </item>

    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="3dip"/>
            <stroke android:width="1dip" android:color="#637c78"/>
            <solid android:color="#0b812b"/>
        </shape>
    </item>

    <item >
        <shape android:shape="rectangle">
            <corners android:radius="3dip"/>
            <stroke android:width="1dip" android:color="#637c78"/>
            <gradient android:angle="-90" android:startColor="#1bf543" android:endColor="#24c434"/>
        </shape>
    </item>


</selector>