<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="3dip"/>
            <stroke android:width="1dip" android:color="#511a1b"/>
            <gradient android:angle="-90" android:startColor="#760d0f" android:endColor="#bf1921"/>
        </shape>
    </item>

    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="3dip"/>
            <stroke android:width="1dip" android:color="#511a1b"/>
            <solid android:color="#91090c"/>
        </shape>
    </item>

    <item >
        <shape android:shape="rectangle">
            <corners android:radius="3dip"/>
            <stroke android:width="1dip" android:color="#511a1b"/>
            <gradient android:angle="-90" android:startColor="#e2191c" android:endColor="#f74649"/>
        </shape>
    </item>

</selector>